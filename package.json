{
  "name": "proxmox-desktop-manager",
  "version": "1.0.0",
  "description": "Modern desktop application for managing Proxmox VE clusters",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm run setup-pages && concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "setup-pages": "node scripts/setup-pages.js",
    "build": "npm run setup-pages && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "next build",
    "build:watch": "npm run setup-pages && concurrently \"npm run build:main:watch\" \"npm run build:renderer:watch\"",
    "build:main:watch": "tsc -p tsconfig.main.json --watch",
    "build:renderer:watch": "next dev",
    "electron:dev": "wait-on dist/main/main.js && electron . --disable-gpu-sandbox --disable-software-rasterizer",
    "electron:pack": "electron-builder",
    "preelectron:pack": "npm run build",
    "start": "npm run build && electron . --disable-gpu --disable-hardware-acceleration --disable-gpu-sandbox --disable-software-rasterizer --disable-gpu-process-crash-limit --no-sandbox",
    "start:safe": "npm run build && electron . --disable-hardware-acceleration --disable-gpu --disable-gpu-sandbox --disable-software-rasterizer --disable-gpu-process-crash-limit --disable-web-security --no-sandbox --disable-features=VizDisplayCompositor",
    "start:minimal": "npm run build && electron . --disable-gpu --disable-hardware-acceleration --disable-software-rasterizer --no-sandbox --single-process",
    "start:debug": "npm run build && electron . --enable-logging --disable-gpu --disable-hardware-acceleration --inspect=9229",
    "start:direct": "electron dist/main/main.js --disable-gpu --disable-hardware-acceleration --no-sandbox",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.7.0",
    "clsx": "^2.0.0",
    "https": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "14.0.0"
  },
  "build": {
    "appId": "com.proxmox.desktop.manager",
    "productName": "Proxmox Desktop Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}