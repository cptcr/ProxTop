{
  "name": "proxmox-desktop-manager",
  "version": "1.0.0",
  "description": "Modern desktop application for managing Proxmox VE clusters",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "setup-pages": "node -e \"const fs=require('fs');const path=require('path');const pagesDir='pages';if(!fs.existsSync(pagesDir))fs.mkdirSync(pagesDir,{recursive:true});console.log('Pages directory ready');\"",
    "clean": "rimraf dist out .next",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "next build",
    "build": "npm run setup-pages && npm run build:main && npm run build:renderer",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "next dev -p 3000",
    "dev": "npm run setup-pages && concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on dist/main/main.js && electron . --disable-gpu\"",
    "start": "npm run build && electron . --disable-gpu --disable-hardware-acceleration --no-sandbox",
    "start:safe": "npm run build && electron . --disable-gpu --disable-hardware-acceleration --disable-software-rasterizer --no-sandbox --disable-features=VizDisplayCompositor --disable-web-security",
    "start:minimal": "npm run build && electron . --disable-gpu --disable-hardware-acceleration --disable-software-rasterizer --no-sandbox --single-process",
    "start:debug": "npm run build && electron . --disable-gpu --disable-hardware-acceleration --no-sandbox --enable-logging --inspect=9229",
    "electron": "electron .",
    "electron:dev": "wait-on dist/main/main.js && electron . --disable-gpu",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "postinstall": "npm run setup-pages"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.7.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "14.0.0"
  },
  "build": {
    "appId": "com.proxmox.desktop.manager",
    "productName": "ProxTop - Proxmox Desktop Manager",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "out"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}